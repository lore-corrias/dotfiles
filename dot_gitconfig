  path = ~/.gitconfig-github
[includeIf "hasconfig:remote.*.url:git@github.com:/**"]
  path = ~/.gitconfig-github
[includeIf "gitdir:~/Lavoro/"]
  path = ~/.gitconfig-work
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
